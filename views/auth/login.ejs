<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
 
     <main>
         <% if(errorMessage) {%> 
         <div><%= errorMessage  %></div>
         <% } %> 
         <form class="login-form" action="/login" method="POST">
             <div class="form-control">
                 <label for="email">Email</label>
                 <input
                 class="<%=validationError.find(el => el.param === 'email')  ? 'invalid' : '' %>"
                  type="email" name="email" id="email" value="<%= oldInput.email %> " >
             </div>
             <div class="form-control">
                 <label for="password">Password</label>
                 <input
                 class="<%=validationError.find(el => el.param === 'password')  ? 'invalid' : '' %>"
                  type="password" name="password" id="password" value="<%= oldInput.pass %>" >
             </div>
           
             <input type="hidden" name="_csrf" value="<%= csrfToken  %>">
             <button class="btn" type="submit">Login</button>
             <div class="centered">
                 <a href="/reset">reset password?</a>
             </div>
         </form>
     </main>
 <%- include('../includes/end.ejs') %>